<h1>Create rental request</h1>

<form action="<%= cat_rental_requests_url %>" method="post">
  <label for="cat_rental_request_cat_id">Cat</label>
    <select name="cat_rental_request[cat_id]" id="cat_rental_request_cat_id">
      <option></option>
      <% Cat.all.each do |cat| %>
      <option
      <%= @rental_request.cat_id == cat.id ? "selected" : "" %>
      <%= cat.name %>
      </option>
      <% end %>
    </select>
  <br>

  <label for="start_date">Start Date</label>
  <input
    type="date"
    name="cat_rental_request[start_date]"
    id="start_date"
    value="<%= @rental_request.start_date %>">
  <br>

  <label for="end_date">End Date</label>
  <input
    type="date"
    name="cat_rental_request[end_date]"
    id="end_date"
    value="<% @rental_request.end_date %>">
  <br>

  <input type="submit">
</form>
